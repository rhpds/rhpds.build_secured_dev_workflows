kind: Deployment
apiVersion: apps/v1
metadata:
  annotations:
  name: tpa-pgsql
spec:
  replicas: 1
  selector:
    matchLabels:
      app: tpa-pgsql
  template:
    metadata:
      labels:
        app: tpa-pgsql
        phase: reference
    spec:
      volumes:
        - name: pgsql-storage
          persistentVolumeClaim:
            claimName: tpa-pgsql-data
      containers:
        - resources:
            limits:
              cpu: '1'
              memory: 1Gi
            requests:
              cpu: 250m
              memory: 512Mi
          readinessProbe:
            tcpSocket:
              port: 5432
            initialDelaySeconds: 15
            timeoutSeconds: 1
            periodSeconds: 20
            successThreshold: 1
            failureThreshold: 3
          name: pgsql
          env:
            - name: POSTGRESQL_USER
              valueFrom:
                secretKeyRef:
                  name: tpa-pgsql-user
                  key: user
            - name: POSTGRESQL_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: tpa-pgsql-user
                  key: password
            - name: POSTGRESQL_DATABASE
              valueFrom:
                secretKeyRef:
                  name: tpa-pgsql-user
                  key: dbname
          ports:
            - containerPort: 5432
              protocol: TCP
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: pgsql-storage
              mountPath: /var/lib/pgsql/data
          image: 'registry.redhat.io/rhel9/postgresql-16:1-1754433677'
